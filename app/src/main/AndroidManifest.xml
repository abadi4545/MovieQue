<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.arkam.popularmovies">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:largeHeap="true"

            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"

            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.arkam.popularmovies.MainActivityFavourite">
        </activity>
        <activity android:name="com.arkam.popularmovies.searchActivities.SearchActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoAnimTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.arkam.popularmovies.movieActivites.MainActivity"/>
        </activity>
        <activity
                android:name="com.arkam.popularmovies.peopleActivities.MainActivityPeopleSecond"
                android:theme="@style/NoAnimTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.arkam.popularmovies.peopleActivities.MainActivityPeople"/>
        </activity>
        <activity
                android:name="com.arkam.popularmovies.tvActivities.MainActivitytvSecond"
                android:theme="@style/NoAnimTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.arkam.popularmovies.tvActivities.MainActivitytv"/>
        </activity>
        <activity
                android:name="com.arkam.popularmovies.movieActivites.ViewAllActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoAnimTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.arkam.popularmovies.movieActivites.MainActivity"/>
        </activity>
        <activity
                android:name="com.arkam.popularmovies.peopleActivities.MainActivityPeople"
                android:theme="@style/AppTheme">

        </activity>
        <activity
                android:name="com.arkam.popularmovies.tvActivities.MainActivitytv"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name="com.arkam.popularmovies.movieActivites.ActivitySecond"
                android:screenOrientation="portrait"
                android:theme="@style/NoAnimTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.arkam.popularmovies.movieActivites.MainActivity"/>
        </activity>
        <activity
                android:name="com.arkam.popularmovies.tvActivities.ViewAllActivityTv"
                android:screenOrientation="portrait"
                android:theme="@style/NoAnimTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.arkam.popularmovies.tvActivities.MainActivitytv"/>
        </activity>
        <activity
                android:name="com.arkam.popularmovies.movieActivites.MainActivity"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>